class Solution {
    public int maxArea(int[] height) {
        
        int start=0;
        int end=height.length-1;
        int max=Integer.MIN_VALUE;

        while(start<end){
            int width=end-start;
            int height_of_tower=Math.min(height[start],height[end]); 
            int capacity=width*height_of_tower;
            if(height[end]>height[start]){
                start++;
            }
            else{
                end--;
            }
            max=Math.max(max,capacity);

        }
    return max;   
    }
}
